    private void limpiarActionPerformed(java.awt.event.ActionEvent evt) {                                        
        txtA.setText("");
        txtB.setText("");
        txtrespuesta.setText("");
    }                                       

    private void determinarActionPerformed(java.awt.event.ActionEvent evt) {                                           
       double A, B;
       try{
           A = Double.parseDouble(txtA.getText());
           B = Double.parseDouble(txtB.getText());
           txtrespuesta.setText(String.valueOf(Ma_me_igu.determinador(A, B)));
       }catch (NumberFormatException e){
           JOptionPane.showMessageDialog(null, "No se pueden usar letras, revise y vuelva a intentar.");
       }
    }                                          

